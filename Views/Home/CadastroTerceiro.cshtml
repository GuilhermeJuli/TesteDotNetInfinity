@model TesteDotNetInfinity.Models.CadastroTerceiro;

<body>
    <div>
        @{
            ViewData["Title"] = "CadastroTerceiro";
        }

            <h3 style="text-align: center;">Cadastro de Motoristas Terceiros</h3>
        <form action="Criar" method="post" style="line-height: 3rem;">
            <div class="form-group" style="text-align: left; margin-top: 4rem;">
                <label asp-for="NomeTerceiro" class="control-label"><strong>Nome</strong>(Nome mesmo da CNH)</label>
                <input asp-for="NomeTerceiro" class="form-control">
                <span asp-validation-for="NomeTerceiro" class="text-danger"></span>
            </div>

            <div class="form-group" style="text-align: left;">
                <label asp-for="DescricaodoVeiculo" class="control-label"><strong>Descrição do Veiculo</strong></label>
                <input asp-for="DescricaodoVeiculo" class="form-control">
                <span asp-validation-for="DescricaodoVeiculo" class="text-danger"></span>
            </div>
            <div class="form-group" style="text-align: left;">
                <label asp-for="PlacaVeiculo" class="control-label"><strong>Placa do Veiculo</strong></label>
                <input asp-for="PlacaVeiculo" class="form-control">
                <span asp-validation-for="PlacaVeiculo" class="text-danger"></span>
            </div>
            <div class="form-group" style="text-align: left; ">
                <label asp-for="Tipo" class="control-label"><strong>Tipo do Veiculo</strong></label>
                <select asp-for="Tipo" class="form-control">
                    <option value="">Selecione o tipo</option>
                    <option value="Carro">Carro</option>
                    <option value="Moto">Moto</option>
                    <option value="Caminhão">Caminhão</option>
                    <option value="Van">Van</option>
                    <option value="Picup">Picup</option>
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span> 
                <div style="align-items: center;">
                <button style="margin-top: 20rem; text-align: center;" type="submit" class="btn btn-primary">Salvar</button>
                </div>
            </div>
           
        </form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
    </div>
</body>
