@model TesteDotNetInfinity.Models.CadastroFrete

@{
    ViewData["Title"] = "CadastroFrete";
}

<body>
    <div class="text-center">    
        <h3 style="text-align: center;">Cadastro de Fretes e Encomendas</h3>

        <form asp-action="Criar" method="post" style="line-height: 3rem;">
            <div class="form-group" style="text-align: left; margin-top: 10rem;">
                <label asp-for="NomedaEmpresa" class="control-label">
                    <strong>Empresa</strong>(Nome da Empresa Remetente.)
                </label>
                <input asp-for="NomedaEmpresa" class="form-control">
                <span asp-validation-for="NomedaEmpresa" class="text-danger"></span>
            </div>

            <div class="form-group" style="text-align: left;">
                <label asp-for="NomeDestinatario" class="control-label">
                    <strong>Destinatario</strong>(Nome do Destinatario ou responsável pelo recebimento.)
                </label>
                <input asp-for="NomeDestinatario" class="form-control">
                <span asp-validation-for="NomeDestinatario" class="text-danger"></span>
            </div>

            <div class="form-group" style="text-align: left;">
                <label asp-for="Distancia" class="control-label">
                    <strong>Distância</strong>(Quilometragem de destino.)
                </label>
                <input asp-for="Distancia" class="form-control">
                <span asp-validation-for="Distancia" class="text-danger"></span>
            </div>
            
            <button style="margin-top: 20rem;" type="submit" class="btn btn-primary">Salvar</button>
        </form>

        @section Scripts{
            <partial name="_ValidationScriptsPartial" />
        }
    </div>
</body>
